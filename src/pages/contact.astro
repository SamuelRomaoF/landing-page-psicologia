---
import MainLayout from "../layouts/MainLayout.astro";
import ContactForm from "../components/ContactForm.astro";

// Metadados para SEO
const title = "Contato | Dr. [Nome] - Psicólogo em [Cidade]";
const description = "Entre em contato com o Dr. [Nome], psicólogo em [Cidade]. Agende sua consulta por telefone, e-mail ou através do formulário online.";
---

<MainLayout 
  title={title}
  description={description}
  keywords="contato psicólogo, agendar consulta psicólogo, psicólogo [Cidade], telefone psicólogo, endereço consultório"
>
  <!-- Banner da Página -->
  <section class="bg-blue-700 text-white py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">Entre em Contato</h1>
      <p class="text-xl max-w-3xl">Estamos aqui para ajudar. Entre em contato para agendar uma consulta ou esclarecer suas dúvidas.</p>
    </div>
  </section>
  
  <!-- Informações de Contato -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-12">
        <!-- Formulário de Contato -->
        <div class="md:w-1/2">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Envie uma Mensagem</h2>
          <ContactForm />
        </div>
        
        <!-- Informações de Contato -->
        <div class="md:w-1/2">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Informações de Contato</h2>
          
          <div class="space-y-8">
            <!-- Endereço -->
            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">Endereço</h3>
                <p class="text-gray-600">Rua Exemplo, 123</p>
                <p class="text-gray-600">[Cidade], SP - CEP: 00000-000</p>
                <p class="text-gray-600 mt-2">Próximo à [ponto de referência]</p>
              </div>
            </div>
            
            <!-- Telefone -->
            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">Telefone</h3>
                <p class="text-gray-600">
                  <a href="tel:+551199999999" class="hover:text-blue-600 transition-colors duration-300">(11) 99999-9999</a>
                </p>
                <p class="text-gray-600 mt-2">WhatsApp disponível para agendamentos</p>
              </div>
            </div>
            
            <!-- Email -->
            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">E-mail</h3>
                <p class="text-gray-600">
                  <a href="mailto:contato@drpsicologonome.com.br" class="hover:text-blue-600 transition-colors duration-300">contato@drpsicologonome.com.br</a>
                </p>
                <p class="text-gray-600 mt-2">Resposta em até 24 horas úteis</p>
              </div>
            </div>
            
            <!-- Horário de Atendimento -->
            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">Horário de Atendimento</h3>
                <p class="text-gray-600">Segunda a Sexta: 9h às 18h</p>
                <p class="text-gray-600">Sábados: Com agendamento prévio</p>
              </div>
            </div>
          </div>
          
          <!-- Redes Sociais -->
          <div class="mt-12">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Redes Sociais</h3>
            <div class="flex space-x-4">
              <a href="https://instagram.com/drpsicologonome" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="bg-blue-100 p-3 rounded-full text-blue-600 hover:bg-blue-600 hover:text-white transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
